u8 tastegedruckt = 0;
u8 port = 0;
//u8 tastermask =0;
void Flankenerkennung(u8 TASTER_PORT)
{
	//port ist 1 oder 0 f√ºr aktiv oder nichtaktiv
	port = RTE_ADC(<TOUCHPORT>);
	
	
	//if(tastermask&(1<<TASTER_PORT))
	if(!tastegedruckt && port)
		tastegedruckt = 1;
		SetEvent(SWC3,TASTERPORT);

	
	if(port == 0){
		tastegedruckt = 0;
	}
	
};
